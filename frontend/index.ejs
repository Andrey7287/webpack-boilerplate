<!DOCTYPE html>
<html lang="ru">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="initial-scale=1.0, width=device-width" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,400i,700" rel="stylesheet" />
	<link rel="shortcut icon" href="./favicon.ico">
</head>

<body>
	<div class="body">
		<div class="content">
			<header>
				<div class="header">
					<div class="container">

						<nav id="siteMenu">
							<button class="c-hamburger c-hamburger--htx">
								<span>toggle menu</span>
							</button>
							<!-- Site menu data -->
							<%
							var menuItems = ['О&nbsp;нас','Каталог','Статьи','Отзывы','Контакты']
							%>
							<!-- Site menu template -->
							<ul class="site-nav">
							<%menuItems.forEach((item, idx)=>{%>

								<li class="site-nav__item<% if(!idx){ %> site-nav__item--act<%}%>">
									<a href=""><%=item %></a>
								</li>
							<%});%>
							</ul>
							.
						</nav>

					</div>
				</div>

			</header>
			<!-- HEADER end-->

			<div class="slider-wrapp">
				<div class="slider">
					<div class="slider__item">
						<img src="images/slider1.jpg" alt="">
					</div>
					<div class="slider__item">
						<img src="images/slider2.jpg" alt="">
					</div>
				</div>
				<button class="slider-arrow left">previos</button>
				<button class="slider-arrow right">next</button>
				<div class="slider-dots"></div>
			</div>

								<div class="search">
									<form action="/search/" method="get">
										<input class="search__input" type="text" name="q" placeholder="Введите строку для поиска">
										<input class="search__submit" type="submit" value="найти">
									</form>
								</div>

		</div>
		<footer class="footer">
			<div class="container">
				<div class="row">
					<div class="col-xs-6">
						<div class="copyright">© Lorem ipsum dolor sit amet. 2017</div>
					</div>
					<div class="col-xs-6">
						<a href="http://infodesign.ru/" class="infodisign">© Создание сайта и дизайн «Инфодизайн» 2017</a>
					</div>
				</div>
			</div>
		</footer>
		<button href="#" class="scrollup">Наверх</button>
	</div>
</body>

</html>
